{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:vue/vue3-recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "unused-imports"
    ],
    "rules": {
        "vue/component-tags-order": [
            "error",
            {
                "order": [
                    "template",
                    "script",
                    "style"
                ]
            }
        ]
    }
}
